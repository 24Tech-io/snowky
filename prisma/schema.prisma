// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id          String    @id @default(uuid())
  name        String
  website     String?
  description String?
  settings    Json      @default("{}") // AI tone, instructions
  theme       Json      @default("{}") // Widget colors
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id])
  documents   Document[]
  sessions    WidgetSession[]
}

model Document {
  id              String      @id @default(uuid())
  name            String
  type            String      // pdf, docx, txt, url, qa
  content         String      @db.Text
  projectId       String
  project         Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  embeddings      Embedding[]
  embeddingStatus String      @default("pending") // pending | processing | complete | failed
  embeddingError  String?     @db.Text
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Embedding {
  id         String   @id @default(uuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  vector     Unsupported("vector(768)")? // Standard dimensions for Gemini embeddings
  content    String   @db.Text
  createdAt  DateTime @default(now())
}

model WidgetSession {
  id        String        @id @default(uuid())
  projectId String
  project   Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  visitorId String?
  history   Json          @default("[]")
  messages  ChatMessage[]
  rating    Int?          // 1-5 user satisfaction rating
  resolved  Boolean?      // Did user mark as resolved?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

// Chat message for analytics tracking
model ChatMessage {
  id           String        @id @default(uuid())
  sessionId    String
  session      WidgetSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role         String        // user | assistant
  content      String        @db.Text
  hadContext   Boolean       @default(true) // Did we find relevant docs for this message?
  responseTime Int?          // Response time in milliseconds
  createdAt    DateTime      @default(now())
}
